---
# Inserir no campo hosts o IP ou nome da nova VM
 - hosts: IPSERVER
   tasks:
   - name:
     shell: systemctl stop firewalld && systemctl disable firewalld
   - name: Installing necessary packages
     yum:
       state: present
       name:
        - iptables-services
        - yum-utils  
        - device-mapper-persistent-data 
        - lvm2
   - name: Upgrade all packages of CentOS
     yum:
       name: "*"
       state: latest
   - name: Add repository docker-ce
     get_url:
      url: https://download.docker.com/linux/centos/docker-ce.repo
      dest: /etc/yum.repos.d/docker-ce.repo
     become: yes
   - name: yum repolist
     shell: yum repolist all
   - name: Installing docker-ce
     yum:
       name: docker-ce
       state: latest
   - name: Enable docker-ce on startup
     systemd:
       state: started
       name: docker
   - name: Enable iptables-services on startup
     systemd:
       name: iptables
       enabled: yes
       masked: no
